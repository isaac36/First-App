<%- contentFor( 'body') %>

<div class="jumbotron">
    <h2>Usuários Cadastrados</h2>
    <p>Lista de usuários Cadastrados no sistema.</p>            
    <table class="table table-hover" id="list">
        <thead>
        <tr>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Email</th>
            <th>Idade</th>
            <th>Altura</th>
            <th>Vota?</th>
            <th>Ação</th>
        </tr>
        </thead>
        <tbody>
              

            <% let linkRemove="/cadastro/remove/"; %>
            <% let linkUpdate="/cadastro/update/"; %>


            <%for(user of users){%>
           <tr>

            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.address %></td>
            <td><%= user.age %></td>
            <td><%= user.height %></td>
            <td><%= user.vote %></td>
            <td><a href="<%= linkUpdate%>"><i class="fas fa-pen"></i></a></td>
            <td><a href="<%= linkRemove%>"><i class="fas fa-trash-alt"></i></a></td>

           </tr>
           <%}%>

        </tbody>
    </table>
</div>